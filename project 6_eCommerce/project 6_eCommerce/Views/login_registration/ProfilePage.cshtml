@model project_6_eCommerce.Models.User
@{
    ViewBag.Title = "ProfilePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    .card {
        border-radius: 0.75rem;
        border: 1px solid #ddd;
        height: 100%; /* تأكد من أن الكارد يشغل كامل الارتفاع */
    }

    .card-header {
        border-bottom: 1px solid #ddd;
        background-color: #d32f2f; /* لون أحمر داكن */
        color: white;
    }

    .card-body {
        padding: 2rem;
        background-color: #f5f5f5; /* خلفية فاتحة للتمييز */
    }

    .user-details dt {
        font-weight: bold;
        color: #333;
    }

    .user-details dd {
        margin-bottom: 1rem;
    }

    .btn {
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
    }

    .btn-primary {
        background-color: #d32f2f; /* لون أحمر داكن */
        border-color: #c62828;
    }

        .btn-primary:hover {
            background-color: #b71c1c;
            border-color: #b71c1c;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .mt-5, .my-5 {
        margin-top: 5rem !important;
        margin-bottom: 5rem !important;
        font-size: 24px;
    }

    .card-content {
        display: flex;
        flex-direction: column; 
        height: 100%; 
    }
</style>

<body>
    <div class="container mt-5">
        <div class="card shadow-sm rounded">
            <div class="card-header text-white text-center">
                <h2 class="mb-0">Profile Page</h2>
            </div>
            <div class="card-body">
                <div class="card-content">
                    <div class="details">
                        <h4 class="text-center mb-4">Welcome @Html.DisplayFor(model => model.Username)!</h4>
                        <hr />
                        <dl class="row user-details">
                            <dt class="col-sm-4">Username</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        </dl>
                        <div class="text-center mt-4">
                            @Html.ActionLink("Edit Profile", "EditProfile", new { id = Model.UserId }, new { @class = "btn btn-dark btn-lg" })
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional: Include Bootstrap JavaScript and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>