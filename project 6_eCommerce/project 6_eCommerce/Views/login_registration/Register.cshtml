@model project_6_eCommerce.Models.User




@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<style>
    .mb-5 {
        color: red;
        
    }
    .text-body {
        --bs-text-opacity: 1;
        color: rgb(188 188 188) !important;
    }
</style>



<section class="vh-100 bg-image" style="background-image: url('@Url.Content("~/images/StockCake-Family Airport Journey_1723985971.jpg")'); background-size: cover; background-position: center;">

    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container-fluid h-100">
            <!-- Changed from container to container-fluid -->
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-center mb-5">Create an account</h2>

                            @using (Html.BeginForm("Register", "login_registration", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div data-mdb-input-init class="form-outline mb-4">
                                    @Html.Label("Your Name", htmlAttributes: new { @class = "form-label", @for = "form3Example1cg" })
                                    @Html.TextBox("Username", null, new { @class = "form-control form-control-lg", @id = "form3Example1cg" })
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    @Html.Label("Your Email", htmlAttributes: new { @class = "form-label", @for = "form3Example3cg" })
                                    @Html.TextBox("Email", null, new { @class = "form-control form-control-lg", @id = "form3Example3cg", @type = "email" })
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    @Html.Label("Password", htmlAttributes: new { @class = "form-label", @for = "form3Example4cg" })
                                    @Html.Password("Password", null, new { @class = "form-control form-control-lg", @id = "form3Example4cg" })
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                </div>
                            }

                            <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="@Url.Action("login", "login_registration")" class="fw-bold text-body"><u>Login here</u></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>











